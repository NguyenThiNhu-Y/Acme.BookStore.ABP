@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Books
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.BookStore.Books
@model CreateModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}

<form method="post" asp-page="/Books/CreateModal">
    <abp-modal size="ExtraLarge">
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Book.Name" />
            <abp-select asp-for="Book.Type" asp-items="Model.CategoryIdFilterItems" />
            <abp-select asp-for="Book.IdAuthor" asp-items="Model.AuthorIdFilterItems"  />
            
            <div class="mb-3">
                <label class="form-label">@L["Image"]</label>
                <input class="form-control" type="file" name="file" accept="image/*" />
            </div>
            <abp-input asp-for="Book.PublishDate" />
            <abp-input asp-for="Book.Price"></abp-input>
            <textarea id="short"></textarea>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
