@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Books
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.BookStore.Books
@model EditModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}

<form method="post" asp-page="/Books/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["UpdateBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id"/>
            <abp-input asp-for="Book.Name" />
            <abp-select asp-for="Book.Type" asp-items="Model.CategoryIdFilterItems" />
            <abp-select asp-for="Book.IdAuthor" asp-items="Model.AuthorIdFilterItems" />
            <abp-input asp-for="Book.PublishDate" />
            <abp-input asp-for="Book.Price"></abp-input>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
