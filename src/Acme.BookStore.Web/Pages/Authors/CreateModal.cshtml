@page
@using Acme.BookStore.Localization
@using Microsoft.Extensions.Localization
@using Acme.BookStore.Web.Pages.Authors
@model CreateModalModel
@inject IStringLocalizer<BookStoreResource> L
@section Scripts{
    <!-- include libraries(jQuery, bootstrap) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>
}
@*@{
        Layout = null;
    }*@


<form method="post" asp-page="/Authors/CreateModal">

    <abp-card>
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">@L["NewAuthor"]</abp-column>

            </abp-row>
        </abp-card-header>
        <abp-card-body>

            <abp-input asp-for="Author.Name" required />
            <abp-input asp-for="Author.DoB" onchange='checkDate()' required />

            <span class="text-danger field-validation-error" data-valmsg-replace="true">
                <span id="errorDate" style="color:red; margin-top:-10px"></span>
            </span>
            @*<abp-input asp-for="Author.ShortBio" onkeyup="change(this);" />
                <p class=" field-validation-error" data-valmsg-replace="true">
                    @L["You've typed"] <span id="char_cnt">0</span> @L["character(s)"].
                    @L["You are allowed"] <span id="chars_left">255</span> @L["character(s)"].
                </p>*@
            @*<div class="form-group">
                <label>@L["Image"]</label>
                <input class="form-control" type="file" name="file" accept="image/*" />*@
            @*</div>*@
            <div class="mb-3">
                <label>@L["ShortBio"]</label>
                <textarea asp-for="Author.ShortBio" id="summernote" rows="3"></textarea>
            </div>

        </abp-card-body>
        @*<abp-card-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)" id="button"></abp-card-footer>*@
        <abp-card-footer>
            <a href="/Authors/Index" class="btn btn-secondary">@L["Cancel"]</a>
            <button id="save" data-busy-text="Đang lưu..." class="btn btn-primary bkgrnd-cyan save-details" type="submit" name="save-details">@L["Save"]</button>
        </abp-card-footer>
    </abp-card>
</form>
