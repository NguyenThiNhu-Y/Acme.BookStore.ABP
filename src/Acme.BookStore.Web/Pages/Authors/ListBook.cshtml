@page
@using Acme.BookStore.Localization
@using Microsoft.Extensions.Localization
@using Acme.BookStore.Web.Pages.Authors
@model ListBookModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
@section scripts{ 
    <abp-script src="/Pages/Author/Index.js"></abp-script>
}
<abp-modal size="ExtraLarge">
    <abp-modal-header>
        <abp-row>
            <abp-column size-md="_6">@L["BooksOfAuthor"]</abp-column>
        </abp-row>
    </abp-modal-header>
    <abp-modal-body>
        <abp-table striped-rows="true" id="BookOfAuthorsTable">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Price</th>
            </tr>
            @if (Model.Books.Count > 0)
            {

                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CategoryParent</td>
                        <td>@String.Format("{0:0,0 vnđ}", @item.Price)</td>
                    </tr>

                }
            }
            else
            {
                <tr class="odd">
                    <td valign="top" colspan="3" class="dataTables_empty text-center">
                        No data available
                    </td>
                </tr>
            }
        </abp-table>


    </abp-modal-body>
</abp-modal>
