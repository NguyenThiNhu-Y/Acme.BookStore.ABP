@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.BookStore.Categories
@model EditModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
<form method="post" asp-page="/Categories/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id"/>
            <abp-input asp-for="Category.Name" />
            <abp-select asp-for="Category.IdParen" asp-items="Model.CategoryIdFilterItems" />
            <abp-input asp-for="Category.Image" type="file" />
            <abp-input asp-for="Category.Describe" />
            <abp-select asp-for="Category.Status"></abp-select>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
