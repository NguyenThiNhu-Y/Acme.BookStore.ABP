@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<BookStoreResource> L
@section scripts {
    <abp-script src="/Pages/Categories/Index.js"></abp-script>
}
<link rel="stylesheet" href="~/CSS/Style.css"/>
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Categories"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewCategoryButton"
                            text="@L["NewCategory"].Value"
                            icon="plus"
                            button-type="Primary" />
                
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CategoriesTable"></abp-table>
    </abp-card-body>
</abp-card>