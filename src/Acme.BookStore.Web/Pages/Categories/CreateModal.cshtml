<form method="post" asp-page="/Categories/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.Name"/>
            <!--<abp-input asp-for="Category.IdParen"/>-->
            <abp-select asp-for="Category.IdParen" asp-items="Model.CategoryIdFilterItems"/>
            @*<abp-input asp-for="Category.Image" type="file"/>*@
            <div class="form-group">
                <label>@L["Image"]</label>
                <input class="form-control" type="file" name="file" accept="image/*"/>
            </div>
            <abp-input asp-for="Category.Describe"/>
            <abp-select asp-for="Category.Status" ></abp-select>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
